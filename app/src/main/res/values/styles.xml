<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FontHeading" >
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="font_normal">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="font_text">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="buttonDesign" >
        <item name="android:width">47dp</item>
        <item name="android:height">36dp</item>
    </style>
